{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "singularName": "page",
    "pluralName": "pages",
    "displayName": "Page",
    "description": "Dynamic pages with flexible content"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "pathname": {
      "type": "string",
      "required": true,
      "unique": true,
      "regex": "^[A-Za-z0-9-_.~/]*$"
    },
    "seo": {
      "type": "component",
      "component": "shared.seo",
      "repeatable": false
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "sections.project-info",
        "sections.steps-layout",
        "sections.step",
        "sections.rich-content",
        "sections.image-component",
        "sections.image-grid",
        "sections.container",
        "sections.typography",
        "sections.button",
        "sections.frame",
        "sections.color-palette",
        "sections.font-preview",
        "sections.persona-card",
        "sections.flow-diagram",
        "sections.custom-html",
        "ui.badge",
        "sections.beyond-canvas",
        "sections.about-canvas",
        "sections.design-journey",
        "sections.tools-used"
      ]
    },
    "published": {
      "type": "boolean",
      "default": false
    }
  }
}
