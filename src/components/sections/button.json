{
  "collectionName": "components_sections_buttons",
  "info": {
    "displayName": "Button"
  },
  "options": {},
  "attributes": {
    "text": {
      "type": "string",
      "required": true
    },
    "variant": {
      "type": "enumeration",
      "default": "default",
      "enum": [
        "default",
        "outline",
        "ghost"
      ]
    },
    "fontKey": {
      "type": "enumeration",
      "default": "arial",
      "enum": [
        "arial",
        "inter",
        "poppins",
        "sfpro",
        "geist",
        "maiky",
        "amita"
      ]
    },
    "fontSize": {
      "type": "string"
    },
    "href": {
      "type": "string"
    },
    "className": {
      "type": "string"
    },
    "textColor": {
      "type": "customField",
      "customField": "plugin::color-picker.color",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
    },
    "backgroundColor": {
      "type": "customField",
      "customField": "plugin::color-picker.color",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
    }
  }
}
